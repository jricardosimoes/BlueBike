<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="pref_title_favorite_enable"
        android:title="@string/pref_title_favorite_enable"
        android:defaultValue="false" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="pref_title_favorite_address"
        android:title="@string/pref_title_favorite_address"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="pref_units"
        android:title="@string/pref_title_units"
        android:defaultValue="km"
        android:entries="@array/pref_unit_names"
        android:entryValues="@array/pref_unit_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="pref_tire"
        android:title="@string/pref_title_tire"
        android:defaultValue="2289.22"
        android:entries="@array/pref_tire_names"
        android:entryValues="@array/pref_tire_values_num"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
